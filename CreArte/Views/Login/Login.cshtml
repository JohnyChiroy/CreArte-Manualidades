<body>

    <div class="login-container">
        <!-- Panel Izquierdo -->
        <div class="left-panel">
            <div class="logo-container text-center">
                <img src="~/Imagenes/logoCreArte.png" alt="Logo CreArte Manualidades" class="logo-img">
            </div>
            <div class="footer-date-time">
                <span class="badge-date" id="currentDate">Jun 14, 2025</span>
                <span class="badge-time" id="currentTime">14:15</span>
            </div>
        </div>

        <!-- Panel Derecho -->
        <div class="right-panel">
            <div class="form-wrapper">
                <h2 class="fw-bold text-center">Bienvenido</h2>

                <form class="login-form mt-4" method="post" action="/Login/Index">
                    <div class="mb-3">
                        @* <label for="usuario">Usuario</label> *@
                        <label asp-for="USUARIO_NOMBRE"></label>
                        <input asp-for="USUARIO_NOMBRE" type="text" class="form-control" id="usuario" placeholder="Ingresa tu usuario" >
                        <span asp-validation-for="USUARIO_NOMBRE" class="text-danger"></span>
                    </div>

                    <div class="mb-2">
                        @* <label for="clave">Contraseña</label> *@
                        <label asp-for="USUARIO_CONTRASENA"></label>
                        <div class="password-container">
                            <input asp-for="USUARIO_CONTRASENA" type="password" class="form-control" id="clave"  placeholder="Ingresa tu contraseña" >
                            <span class="eye-toggle" onclick="togglePassword()">👁️</span>
                            <span asp-validation-for="USUARIO_CONTRASENA" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <a href="@Url.Action("Index", "Home")" class="text-white text-decoration-underline">¿Has olvidado tu contraseña?</a>
                        @* <a href="#" class="text-white text-decoration-underline">¿Has olvidado tu contraseña?</a> *@
                    </div>
                 
                    <button type="button" class="btn-login" onclick="location.href='@Url.Action("Index", "Home")'">
                        Iniciar Sesión
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script src="~/js/Login.js"></script>
</body>
</html>