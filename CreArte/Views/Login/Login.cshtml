@model CreArte.ModelsPartial.LoginViewModels
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;  
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Login | CreArte</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap y fuentes -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true">
</head>

<body>
    <div class="login-container">
        <!-- Panel Izquierdo  -->
        <div class="left-panel">
            <div class="logo-container text-center">
                <img src="~/Imagenes/logoCreArte.png" alt="Logo CreArte Manualidades" class="logo-img">
            </div>
            <div class="footer-date-time">
                <span class="badge-date" id="currentDate">Jun 14, 2025</span>
                <span class="badge-time" id="currentTime">14:15</span>
            </div>
        </div>

        <!-- Panel Derecho -->
        <div class="right-panel">
            <div class="form-wrapper">
                <h1 class="fw-bold text-center">Bienvenido</h1>
                <br></br>

                <!-- Resumen de validación para errores generales (usuario/contraseña) -->
                <div asp-validation-summary="ModelOnly" class="text-warning mt-3"></div>

                <!-- El form ahora postea a /Login/Login y lleva antiforgery -->
                <form class="login-form mt-4" asp-action="Login" asp-controller="Login" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="USUARIO_NOMBRE"></label>
                        <input asp-for="USUARIO_NOMBRE"
                               type="text"
                               class="form-control"
                               id="usuario"
                               placeholder="Ingresa tu usuario"
                               autocomplete="username"
                               autofocus />
                        <span asp-validation-for="USUARIO_NOMBRE" class="text-warning"></span>
                    </div>

                    <div class="mb-2">
                        <label asp-for="USUARIO_CONTRASENA"></label>
                        <div class="password-container">
                            <input asp-for="USUARIO_CONTRASENA"
                                   type="password"
                                   class="form-control"
                                   id="clave"
                                   placeholder="Ingresa tu contraseña"
                                   autocomplete="current-password" />
                            <span class="eye-toggle" onclick="togglePassword()">👁️</span>
                        </div>
                        <span asp-validation-for="USUARIO_CONTRASENA" class="text-warning"></span>
                    </div>

                    @* <div class="form-check mb-3">
                        <input asp-for="Recordarme" class="form-check-input" id="recordarme" />
                        <label asp-for="Recordarme" class="form-check-label"></label>
                    </div> *@

                    <div class="mb-3">
                        <a href="@Url.Action("CambiarContrasena", "Login")"
                           class="text-white text-decoration-underline">¿Has olvidado tu contraseña?</a>
                    </div>

                    <!-- Botón de envío REAL -->
                    <button type="submit" class="btn-login">
                        Iniciar Sesión
                    </button>
                </form>

                <!-- Mensajes informativos (p.ej., después de cambiar contraseña) -->
                @* @if (TempData["Mensaje"] != null)
                {
                    <div class="alert alert-success mt-3">@TempData["Mensaje"]</div>
                } *@

                @if (TempData["Mensaje"] != null)
                {
                    <div class="alert alert-paleta mt-3" role="alert">
                        @TempData["Mensaje"]
                    </div>
                }

            </div>
        </div>
    </div>

    <!-- JS Login -->
    <script src="~/js/Login.js" asp-append-version="true"></script>

    <!-- Validación del lado del cliente  -->
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
