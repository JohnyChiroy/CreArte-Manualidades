@model CreArte.ModelsPartial.RestablecerContrasenaVM
@{
    ViewData["Title"] = "Restablecer contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string token = ViewBag.RecoveryToken as string ?? "";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="ua-card" style="padding:20px; border-radius:12px; box-shadow:0 6px 20px rgba(0,0,0,.08);">
                <h3 class="mb-2">Restablecer contraseña</h3>

                @if (TempData["Mensaje"] != null)
                {
                    <div class="alert alert-info">@TempData["Mensaje"]</div>
                }

                <form asp-action="RestablecerContrasenaPorToken" asp-controller="Login" method="post" id="frmChange">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="token" value="@token" />

                    <div class="mb-3">
                        <label asp-for="NuevaContrasena" class="form-label"></label>
                        <input asp-for="NuevaContrasena" class="form-control" />
                        <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmarContrasena" class="form-label"></label>
                        <input asp-for="ConfirmarContrasena" class="form-control" />
                        <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-dark" id="btnCambiar">
                            <i class="bi bi-shield-lock"></i> Guardar
                        </button>
                        <a asp-action="Login" asp-controller="Login" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Volver al login
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function(){
            const frm = document.getElementById('frmChange');
            const btn = document.getElementById('btnCambiar');
            if(!frm || !btn) return;
            frm.addEventListener('submit', function(){
                btn.disabled = true;
                btn.innerHTML = '<i class="bi bi-hourglass-split"></i> Guardando...';
            });
        })();
    </script>
}
