@using CreArte.ModelsPartial
@model PedidoDetailsVM

@{
    ViewData["Title"] = "Detalle del Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var metodosPago = ViewBag.MetodosPagoCombo as List<SelectListItem> ?? new List<SelectListItem>();
}

@section Styles {
    <style>
        /* ======== Grid de resumen (stats) ======== */
        .ua-summary {
            display: grid;
            grid-template-columns: repeat(5, minmax(0, 1fr));
            gap: 12px;
            margin-top: 12px;
        }

        @@media (max-width: 1200px) {
            .ua-summary {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        @@media (max-width: 768px) {
            .ua-summary {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 576px) {
            .ua-summary {
                grid-template-columns: 1fr;
            }
        }

        .ua-stat {
            border-radius: 10px;
            padding: 12px 14px;
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        /* Paleta por tarjeta, alineada a las otras vistas */
        .cuadro-Cliente {
            background: #03C1FF;
            color: white;
        }

        .cuadro-Estado {
            background: #332973;
            color: white;
        }

        .cuadro-Fechas {
            background: #23B6B1;
            color: white;
        }

        .cuadro-Antic {
            background: #FF007D;
            color: white;
        }

        .cuadro-Total {
            background: #F2B90F;
            color: black;
        }
        /* fondo claro → texto oscuro */

        .ua-stat .caption {
            font-size: .8rem;
            color: inherit;
            text-transform: uppercase;
            letter-spacing: .4px;
        }

        .ua-stat .value {
            font-weight: 700;
            font-size: 1.05rem;
        }

        .ua-stat .sub {
            font-size: .8rem;
            color: inherit;
        }

        /* ======== Tabla con encabezado redondeado ======== */
        .ua-table-container {
            margin-top: 20px;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        }

        .ua-table {
            margin-bottom: 0;
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
        }

            .ua-table thead th {
                background: #C5D930; /* color de encabezado */
                color: black;
                font-weight: 700;
                text-transform: uppercase;
                padding: 5px 5px;
                border: none;
            }

            .ua-table thead tr:first-child th:first-child {
                border-top-left-radius: 10px;
            }

            .ua-table thead tr:first-child th:last-child {
                border-top-right-radius: 10px;
            }

            .ua-table tbody td {
                border-top: 1px solid #e5e7eb;
                background: #fff;
                vertical-align: middle;
                padding: 8px 12px;
            }

            .ua-table tfoot td {
                background: #f9fafb;
                border-top: 2px solid #e5e7eb;
                font-weight: 600;
                padding: 10px 12px;
            }

        /* Miniaturas de imagen */
        .ua-img-thumb-fila-details {
            width: 60px;
            height: 60px;
            object-fit: cover;
            object-position: center;
            border-radius: 6px;
            border: 1px solid #e5e7eb;
            background: #f8f9fa;
        }

        /* k/v mini (usado en Observaciones) */
        .ua-kv-mini .lbl {
            font-size: .8rem;
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: .4px
        }

        .ua-kv-mini .val {
            font-weight: 600
        }

        /* Totales al pie (tabla) */
        tfoot td {
            font-weight: 600
        }
    </style>
}

<div class="ua-card">
    <!-- ========================= TOOLBAR ========================= -->
    <div class="ua-toolbar">
        <h2 class="m-0">Pedido @Model.PedidoId</h2>

        <div class="d-flex align-items-center gap-2">
            @* ======== BORRADOR ======== *@
            @if (Model.EstadoId == "BORRADOR")
            {
                if (Model.PuedeCotizar)
                {
                    <form asp-action="Cotizar" asp-controller="Pedidos" asp-route-id="@Model.PedidoId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-revision" title="Enviar a cotización">
                            <i class="bi bi-calculator"></i> <span>Cotizar</span>
                        </button>
                    </form>
                }
            }

            @* ======== COTIZADO ======== *@
            @if (Model.EstadoId == "COTIZADO")
            {
                if (Model.PuedeAprobar)
                {
                    <form asp-action="Aprobar" asp-controller="Pedidos" asp-route-id="@Model.PedidoId" method="post" class="d-inline"
                          onsubmit="return confirm('¿Aprobar el pedido?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-aprobado">
                            <i class="bi bi-check2-square"></i> <span>Aprobar</span>
                        </button>
                    </form>
                }
                if (Model.PuedeRechazar)
                {
                    <form asp-action="Rechazar" asp-controller="Pedidos" asp-route-id="@Model.PedidoId" method="post" class="d-inline"
                          onsubmit="return confirm('¿Rechazar el pedido?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-anular">
                            <i class="bi bi-slash-circle"></i> <span>Rechazar</span>
                        </button>
                    </form>
                }
                @if (Model.PuedePagarAnticipo && Model.RequiereAnticipo && Model.AnticipoEstado == "PENDIENTE")
                {
                    <form class="frm-anticipo d-inline"
                          asp-action="PagarAnticipo" asp-controller="Pedidos"
                          asp-route-id="@Model.PedidoId" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-enviado">
                            <i class="bi bi-cash-stack"></i> <span>Pagar anticipo</span>
                        </button>
                    </form>
                }

            }

            @* ======== APROBADO ======== *@
            @if (Model.EstadoId == "APROBADO")
            {
                if (Model.PuedeFinalizar)
                {
                    <form asp-action="EnProduccion" asp-controller="Pedidos" asp-route-id="@Model.PedidoId" method="post" class="d-inline"
                          onsubmit="return confirm('Esto iniciará producción'. ¿Continuar?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-confirmado">
                            <i class="bi bi-hammer"></i> <span>En Producción</span>
                        </button>
                    </form>
                }
                @if (Model.PuedePagarAnticipo && Model.RequiereAnticipo && Model.AnticipoEstado == "PENDIENTE")
                {
                    <form class="frm-anticipo d-inline"
                          asp-action="PagarAnticipo" asp-controller="Pedidos"
                          asp-route-id="@Model.PedidoId" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-enviado">
                            <i class="bi bi-cash-stack"></i> <span>Pagar anticipo</span>
                        </button>
                    </form>
                }
                if (Model.PuedeCancelar)
                {
                    <form asp-action="Cancelar" asp-controller="Pedidos" asp-route-id="@Model.PedidoId" method="post" class="d-inline"
                          onsubmit="return confirm('¿Cancelar el pedido (APROBADO)?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-anular">
                            <i class="bi bi-x-circle"></i> <span>Cancelar</span>
                        </button>
                    </form>
                }
            }

            @* ======== EN_PRODU ======== *@
            @if (Model.EstadoId == "EN_PRODU")
            {
                if (Model.PuedeFinalizar)
                {
                    <form asp-action="Finalizar" asp-controller="Pedidos" asp-route-id="@Model.PedidoId" method="post" class="d-inline"
                          onsubmit="return confirm('¿Marcar como TERMINADO y convertir la RESERVA en SALIDA PEDIDO?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-confirmado">
                            <i class="bi bi-clipboard-check"></i> <span>Finalizar</span>
                        </button>
                    </form>
                }
                @if (Model.PuedePagarAnticipo && Model.RequiereAnticipo && Model.AnticipoEstado == "PENDIENTE")
                {
                    <form class="frm-anticipo d-inline"
                          asp-action="PagarAnticipo" asp-controller="Pedidos"
                          asp-route-id="@Model.PedidoId" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-enviado">
                            <i class="bi bi-cash-stack"></i> <span>Pagar anticipo</span>
                        </button>
                    </form>
                }

                if (Model.PuedeCancelar)
                {
                    <form asp-action="Cancelar" asp-controller="Pedidos" asp-route-id="@Model.PedidoId" method="post" class="d-inline"
                          onsubmit="return confirm('¿Cancelar el pedido (EN_PRODU)?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-anular">
                            <i class="bi bi-x-circle"></i> <span>Cancelar</span>
                        </button>
                    </form>
                }
            }

            @if (Model.EstadoId == "TERMINADO")
            {
                if (Model.PuedeEntregar)
                {
                    <form id="frmEntregar" asp-action="Entregar" asp-controller="Pedidos" asp-route-id="@Model.PedidoId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-recibir">
                            <i class="bi bi-truck"></i> <span>Entregar</span>
                        </button>
                    </form>
                }
            }
            @if (Model.EstadoId == "ENTREGADO")
            {
                <a class="btn-confirmado" target="_blank"
                   href="@Url.Action("ReciboPedido", "Pedidos", new { id = Model.PedidoId })">
                    <i class="bi bi-file-earmark-pdf"></i> <span>Ver recibo de venta</span>
                </a>
            }
            @* ENTREGADO / CANCELADO / RECHAZADO: sin acciones *@
        </div>
    </div>

    <!-- ========================= RESUMEN (tarjetas) ========================= -->
    <div class="ua-summary">
        <!-- Cliente -->
        <div class="ua-stat">
            <div class="caption">Cliente</div>
            <div class="value">@Model.ClienteNombre</div>
        </div>

        <!-- Fechas -->
        <div class="ua-stat">
            <div class="caption">Fecha Pedido</div>
            <div class="value">@Model.FechaPedido.ToString("dd/MM/yyyy")</div>
            <div class="caption">Fecha Entrega</div>
            <div class="value">@((Model.FechaEntrega?.ToString("dd/MM/yyyy")) ?? "-")</div>
        </div>

        <!-- Estado -->
        <div class="ua-stat">
            <div class="caption">Estado</div>
            <div class="value">
                <span class="badge bg-@GetEstadoClass(Model.EstadoId)">@Model.EstadoId</span>
            </div>

            <div class="caption">Anticipo</div>
            <div class="value">
                @if (Model.RequiereAnticipo)
                {
                    <span class="badge @(Model.AnticipoEstado == "PAGADO" ? "bg-cargada" :
                                                                                            Model.AnticipoEstado == "DEVUELTO" ? "bg-cerra text-dark" :
                                                                                            "bg-envi text-dark")">
                    @Model.AnticipoEstado
                </span>
                <span class="ms-2">Q @Model.AnticipoMinimo.ToString("N2")</span>
                                }
                else
                {
                    <span class="badge bg-revi">NO APLICA</span>
                }
            </div>
            @* <div class="sub">Flujo: BORRADOR → COTIZADO → APROBADO → EN_PRODU → TERMINADO → ENTREGADO / CANCELADO / RECHAZADO</div> *@
        </div>


        <!-- Total del Pedido -->
        <div class="ua-stat">
            <div class="caption">Total Pedido</div>
            <div class="value">Q @Model.TotalPedido.ToString("N2")</div>
            <div class="sub">Suma de líneas solicitadas</div>
        </div>
        <!-- ========================= OBSERVACIONES ========================= -->
            <div style="margin-top:8px;">
                <div class="ua-field" style="flex:1 1 100%;">
                    <div class="ua-kv-mini">
                        <div class="lbl">Observaciones</div>
                        <div class="val">@(Model.Observaciones ?? "-")</div>
                    </div>
                </div>
            </div>
    </div>

    <!-- ========================= DETALLE DE LÍNEAS ========================= -->
    <div class="ua-table-container">
        <div class="table-responsive">
            <table class="table table-sm align-middle ua-table">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Producto</th>
                        <th class="text-center">Imagen</th>
                        <th class="text-center">Cantidad</th>
                        <th class="text-center">Precio</th>
                        <th class="text-end">Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var l in Model.Lineas)
                    {
                        <tr>
                            <td>@l.ProductoId</td>
                            <td>@l.ProductoNombre</td>
                            <td class="text-center">
                                @if (!string.IsNullOrWhiteSpace(l.ImagenProducto))
                                {
                                    <img src="@l.ImagenProducto" alt="@l.ProductoNombre" class="ua-img-thumb-fila-details" />
                                }
                                else
                                {
                                    <span>—</span>
                                }
                            </td>
                            <td class="text-center">@l.Cantidad</td>
                            <td class="text-center">@l.PrecioPedido.ToString("N2")</td>
                            <td class="text-end">@l.Subtotal.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4" class="text-end fw-bold">Total:</td>
                        <td colspan="2" class="text-end fw-bold text-primary">
                            Q @Model.TotalPedido.ToString("N2")
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <!-- ========================= ACCIONES FINALES ========================= -->
    <div class="ua-actions" style="margin-top:12px;">
        <a asp-action="Index" asp-controller="Pedidos" class="btn-cancel">
            <i class="bi bi-arrow-left"></i> <span>Volver</span>
        </a>
    </div>
</div>

