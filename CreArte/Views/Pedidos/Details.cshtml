@functions {
    /* Mapeo de estado → clase de badge (se respeta tu convención) */
    private string GetEstadoClass(string estado) => estado switch
    {
        "BORRADOR" => "secondary",
        "COTIZADO" => "revi",
        "APROBADO" => "apro",
        "EN_PRODU" => "envi",
        "TERMINADO" => "confi",
        "ENTREGADO" => "reci",
        "CANCELADO" => "anu",
        "RECHAZADO" => "anu",
        _ => "light text-dark"
    };
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        (function(){
          function qs(s, r=document){ return r.querySelector(s); }
          function money(n){ return 'Q ' + Number(n||0).toFixed(2); }

          // Detecta si el método seleccionado es EFECTIVO (por nombre visible o data-nombre)
          function isMetodoEfectivo(){
            const sel = qs('#ppMetodo');
            if (!sel) return false;
            const opt = sel.selectedOptions?.[0];
            const nombre = (opt?.getAttribute('data-nombre') || opt?.text || '').trim().toUpperCase();
            return nombre.includes('EFECTIVO'); // independiente del ID (MP00000001)
          }

          function toggleEfectivoBlock(){
            const block = qs('#ppEfectivoBlock');
            const inp   = qs('#ppEfectivo');
            const esEf  = isMetodoEfectivo();

            if (block) block.style.opacity = esEf ? '1' : '0.6';
            if (inp){
              inp.disabled = !esEf;
              if (!esEf){
                inp.value = '';
                qs('#ppVuelto').textContent = money(0);
                qs('#ppEfectivoErr')?.classList.add('d-none');
              } else {
                setTimeout(()=> inp.focus(), 50);
              }
            }
            validatePago();
          }

          function recalcVuelto(){
            const total = Number((qs('#ppMonto')?.value || 0));
            const rec   = Number((qs('#ppEfectivo')?.value || 0));
            const v = Math.max(0, rec - total);
            qs('#ppVuelto').textContent = money(v);
            validatePago();
          }

          function validatePago(){
            const metodo = (qs('#ppMetodo')?.value || '').trim();
            const monto  = Number(qs('#ppMonto')?.value || 0);
            const btn    = qs('#ppBtnConfirmar');
            let ok = true;

            if(!metodo){ qs('#ppMetodoErr')?.classList.remove('d-none'); ok = false; }
            else       { qs('#ppMetodoErr')?.classList.add('d-none'); }

            if(!(monto > 0)){ qs('#ppMontoErr')?.classList.remove('d-none'); ok = false; }
            else            { qs('#ppMontoErr')?.classList.add('d-none'); }

            if (isMetodoEfectivo()){
              const rec = Number(qs('#ppEfectivo')?.value || 0);
              const err = qs('#ppEfectivoErr');
              if (!(rec > 0)) {
                err.textContent = "Debe ingresar el efectivo recibido.";
                err.classList.remove('d-none'); ok = false;
              } else if (rec < monto){
                err.textContent = "El efectivo recibido no puede ser menor al monto a cobrar.";
                err.classList.remove('d-none'); ok = false;
              } else {
                err.classList.add('d-none');
              }
            } else {
              qs('#ppEfectivoErr')?.classList.add('d-none');
            }

            if (btn) btn.disabled = !ok;
            return ok;
          }

          // Preselecciona EFECTIVO por nombre
          function preselectEfectivo(){
            const sel = qs('#ppMetodo');
            if (!sel) return;
            const opts = Array.from(sel.options);
