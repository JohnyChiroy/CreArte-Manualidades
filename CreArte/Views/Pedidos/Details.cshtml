        // JS pago de anticipo
        (function(){
          // ===== Helpers =====
          function qs(s, r=document){ return r.querySelector(s); }
          function money(n){ return 'Q ' + Number(n||0).toFixed(2); }
          function apIsEfectivo(){
            const sel = qs('#apMetodo');
            const opt = sel?.selectedOptions?.[0];
            const nombre = (opt?.getAttribute('data-nombre') || opt?.text || '').trim().toUpperCase();
            return nombre.includes('EFECTIVO');
          }

          function apToggleEfectivo(){
            const block = qs('#apEfectivoBlock');
            const inp   = qs('#apEfectivo');
            const esEf  = apIsEfectivo();
            if (block) block.style.opacity = esEf ? '1' : '0.6';
            if (inp){
              inp.disabled = !esEf;
              if (!esEf){
                inp.value = '';
                qs('#apVuelto').textContent = money(0);
                qs('#apEfectivoErr')?.classList.add('d-none');
              } else {
                setTimeout(()=> inp.focus(), 50);
              }
            }
            apValidate();
          }

          function apRecalcVuelto(){
            const total = Number((qs('#apMonto')?.value || 0));
            const rec   = Number((qs('#apEfectivo')?.value || 0));
            const v = Math.max(0, rec - total);
            qs('#apVuelto').textContent = money(v);
            apValidate();
          }

          function apValidate(){
            const metodo = (qs('#apMetodo')?.value || '').trim();
            const monto  = Number(qs('#apMonto')?.value || 0);
            const btn    = qs('#apBtnConfirmar');
            let ok = true;

            if(!metodo){ qs('#apMetodoErr')?.classList.remove('d-none'); ok = false; }
            else       { qs('#apMetodoErr')?.classList.add('d-none'); }

            if(!(monto > 0)){ qs('#apMontoErr')?.classList.remove('d-none'); ok = false; }
            else            { qs('#apMontoErr')?.classList.add('d-none'); }

            if (apIsEfectivo()){
              const rec = Number(qs('#apEfectivo')?.value || 0);
              const err = qs('#apEfectivoErr');
              if (!(rec > 0)) {
                err.textContent = "Debe ingresar el efectivo recibido.";
                err.classList.remove('d-none'); ok = false;
              } else if (rec < monto){
                err.textContent = "El efectivo recibido no puede ser menor al anticipo.";
                err.classList.remove('d-none'); ok = false;
              } else {
                err.classList.add('d-none');
              }
            } else {
              qs('#apEfectivoErr')?.classList.add('d-none');
            }

            if (btn) btn.disabled = !ok;
            return ok;
          }

          function apPreselectEfectivo(){
            const sel = qs('#apMetodo');
            if (!sel) return;
            const opts = Array.from(sel.options);
            const idx = opts.findIndex(o => ((o.getAttribute('data-nombre') || o.text || '').toUpperCase()).includes('EFECTIVO'));
            if (idx >= 0) sel.selectedIndex = idx;
          }

          function openAnticipoModal(montoAnticipo){
            const el = document.getElementById('apModal');
            const modal = new bootstrap.Modal(el, {backdrop:'static', keyboard:false});
            qs('#apTotalTexto').textContent = money(montoAnticipo);
            const monto = qs('#apMonto');
            if (monto){
              monto.value = Number(montoAnticipo).toFixed(2);
              monto.readOnly = true;
            }
            apPreselectEfectivo();
            apToggleEfectivo();
            apRecalcVuelto();
            apValidate();
            qs('#apMetodoErr')?.classList.add('d-none');
            qs('#apMontoErr')?.classList.add('d-none');
            qs('#apEfectivoErr')?.classList.add('d-none');
            modal.show();
            return modal;
          }

          // === Wire-up
          document.getElementById('apMetodo')?.addEventListener('change', apToggleEfectivo);
          document.getElementById('apEfectivo')?.addEventListener('input', apRecalcVuelto);

          // 2.1 Interceptar TODOS los formularios de anticipo (¡sin asp-*!)
          document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('form.frm-anticipo').forEach(function(frm){
              frm.addEventListener('submit', function(e){
                e.preventDefault();
                const anticipo = Number('@Model.AnticipoMinimo'.toString().replace(',', '.')) || 0;
                if (!(anticipo > 0)) {
                  Swal.fire({icon:'warning', title:'Anticipo no configurado', text:'El anticipo mínimo es 0.'});
                  return;
                }
                window.__frmAnticipoActual = frm;
                openAnticipoModal(anticipo);
              });
            });
          });

          // 2.2 Confirmar → inyectar campos y enviar el MISMO form
          document.getElementById('apBtnConfirmar')?.addEventListener('click', function(){
            if (!apValidate()) return;
            const metodo   = (document.getElementById('apMetodo')?.value || '').trim();
            const monto    = Number(document.getElementById('apMonto')?.value || 0);
            const efectivo = Number(document.getElementById('apEfectivo')?.value || 0);

            const frm = window.__frmAnticipoActual || document.querySelector('form.frm-anticipo');
            if (!frm) {
              Swal.fire({ icon:'error', title:'No se encontró el formulario de Anticipo.' });
              return;
            }
            function setHidden(name, value){
              let input = frm.querySelector(`input[name="${name}"]`);
              if (!input){
                input = document.createElement('input');
                input.type = 'hidden';
                input.name = name;
                frm.appendChild(input);
              }
              input.value = value;
            }
            setHidden('MetodoPagoId', metodo);
            setHidden('MontoPago',   monto.toFixed(2));
            setHidden('EfectivoRecibido', apIsEfectivo() ? efectivo.toFixed(2) : '');

            bootstrap.Modal.getInstance(document.getElementById('apModal'))?.hide();
            frm.submit();
          });

          // Alerta OK anticipo
          (function () {
            const okAnt = '@(TempData["ok_anticipo"] ?? "")';
            if (okAnt) Swal.fire({ icon:'success', title: okAnt, timer: 1400, showConfirmButton:false });
          })();
        })();
    </script>
