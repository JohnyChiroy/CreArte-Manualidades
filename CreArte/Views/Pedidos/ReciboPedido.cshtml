@model dynamic
@{
    Layout = null;

    var titulo = $"Recibo de Pedido";
    var logoUrl = Url.Content("~/Imagenes/logoCreArte.png");
    var empresaInfo = "CreArte Manualidades";

    // Derivados
    decimal totalPedido = (decimal)Model.TotalPedido;
    decimal anticipoPagado = (decimal)Model.AnticipoPagado;
    decimal pagoEntrega = (decimal)Model.PagoEntrega;
    decimal totalRecibido = (decimal)Model.TotalRecibido;

    var cambio = totalRecibido - totalPedido;
    var mostrarCambio = cambio >= 0m;

    int totalItems = 0;
    if (Model.Lineas != null) { foreach (var _ in Model.Lineas) totalItems++; }

    string fechaTxt;
    if (Model.Fecha is DateTime dt) fechaTxt = dt.ToString("dd/MM/yyyy HH:mm:ss");
    else if (Model.Fecha is DateOnly dOnly) fechaTxt = new DateTime(dOnly.Year, dOnly.Month, dOnly.Day).ToString("dd/MM/yyyy");
    else fechaTxt = System.Convert.ToDateTime(Model.Fecha).ToString("dd/MM/yyyy HH:mm:ss");

    string pedidoId = (string)Model.PedidoId;
    string clienteNombre = (string)Model.ClienteNombre;
    string usuarioNombre = (string)Model.UsuarioNombre;
    string metodoPagoEntrega = (string)Model.MetodoPagoEntrega;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@titulo - @pedidoId</title>
    <style>
        * {
            box-sizing: border-box
        }

        html, body {
            margin: 0;
            padding: 0;
            background: #fff
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 12px;
            color: black;
            line-height: 1.35
        }

        .header {
            color: black;
            padding: 10px 10px;
            border-radius: 5px;
        }

        .header-table {
            width: 100%;
            border-collapse: collapse
        }

            .header-table td {
                border: 0;
                vertical-align: middle;
                background: transparent !important;
            }

        .h-left {
            font-size: 26px;
            font-weight: bold;
            letter-spacing: .3px
        }

        .h-sub {
            font-size: 12px;
            margin-top: 2px;
        }

        .h-right {
            width: 70px;
            text-align: right
        }

        .logo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .logo {
            width: 110px;
            height: 60px;
            object-fit: cover;
            object-position: center;
            display: inline-block;
            border-radius: 8px;
        }

        .container {
            padding: 12px 18px 14px 18px
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            margin-top: 6px
        }

        th, td {
            padding: 9px 10px;
            vertical-align: top;
            text-align: left;
            border-bottom: 1px solid #C5D930;
        }

        thead th {
            background: #C5D930;
            color: black;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: .5px;
        }

            thead th:first-child {
                border-top-left-radius: 7px
            }

            thead th:last-child {
                border-top-right-radius: 7px
            }

        .right {
            text-align: right
        }

        .center {
            text-align: center
        }

        .nowrap {
            white-space: nowrap
        }

        .totals {
            margin-top: 10px;
            padding: 8px 10px;
            border-radius: 10px;
            border: 1px solid #C5D930;
            color: black;
            font-weight: bold
        }

            .totals .label {
                font-weight: 800;
            }

            .totals .ok {
                color: #03C1FF
            }

            .totals .no {
                color: #FF007D
            }

        .totline {
            display: flex;
            justify-content: space-between;
            padding: 3px 0;
        }

        .kv-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 6px 12px;
        }

        .kv {
            border-radius: 8px;
            padding: 6px 8px;
        }

            .kv b {
                display: inline-block;
                min-width: 110px;
            }

        .note {
            margin-top: 8px;
            font-size: 10px;
            color: black;
            text-align: center;
        }

        .divider {
            height: 1px;
            background: linear-gradient(90deg, rgba(197,217,48,.0), rgba(197,217,48,1), rgba(197,217,48,.0));
            margin: 8px 0;
        }

        .pill-info {
            background: #E6F7FF;
            border: 1px solid #BDEBFF;
            color: #087EA4;
            padding: 6px 8px;
            border-radius: 10px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header class="header">
        <table class="header-table">
            <tr>
                <td>
                    <div class="h-left">@titulo</div>
                    <div class="h-sub">
                        @empresaInfo · Pedido: <b>@pedidoId</b> · @fechaTxt
                    </div>
                </td>
                <td class="h-right">
                    <span class="logo"><img src="@logoUrl" alt="Logo" /></span>
                </td>
            </tr>
        </table>
    </header>

    <main class="container">
        <!-- Datos clave -->
        <section class="totals">
            <div class="kv"><b>Cliente:</b> @clienteNombre</div>
            <div class="kv"><b>Atendido por:</b> @usuarioNombre</div>
            <div class="kv"><b>Método de pago:</b> @metodoPagoEntrega</div>
            <div class="kv"><b>Anticipo pagado: </b>Q @anticipoPagado.ToString("N2")</div>
        </section>

        <div class="divider"></div>

        <!-- Líneas -->
        <table>
            <thead>
                <tr>
                    <th>Producto</th>
                    <th class="right nowrap">Cantidad</th>
                    <th class="right nowrap">Precio</th>
                    <th class="right nowrap">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Lineas != null && totalItems > 0)
                {
                    foreach (var l in Model.Lineas)
                    {
                        <tr>
                            <td>@l.Producto</td>
                            <td class="right">@l.Cantidad</td>
                            <td class="right">Q @l.PrecioUnitario.ToString("N2")</td>
                            <td class="right">Q @l.Subtotal.ToString("N2")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td class="center" colspan="4" style="padding:16px;">No hay líneas para mostrar.</td></tr>
                }
            </tbody>
        </table>

        <!-- Totales -->
        <section class="totals">
            <div class="totline">
                <span class="label">Anticipo pagado: </span>
                <span>Q @anticipoPagado.ToString("N2")</span>
            </div>
            <div class="totline">
                <span class="label">Pago en entrega: </span>
                <span>Q @pagoEntrega.ToString("N2")</span>
            </div>
            <div class="totline">
                <span class="label">Total recibido (anticipo + entrega): </span>
                <span class="ok">Q @totalRecibido.ToString("N2")</span>
            </div>

            @if (mostrarCambio)
            {
                <div class="totline">
                    <span class="label">Cambio:</span>
                    <span class="no">Q @cambio.ToString("N2")</span>
                </div>
            }
        </section>

        <div class="note">
            CreArte Manualidades · ¡Gracias por su preferencia! · Recibo generado @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")
        </div>
    </main>
</body>
</html>
