@model CreArte.ModelsPartial.PrecioHistoricoVM
@{
    ViewData["Title"] = "Histórico de precios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="m-0">Histórico de precios – @Model.PRODUCTO_ID</h3>
        @* Botón volver, si el producto tiene detalle*@
        @if (!string.IsNullOrWhiteSpace(Model.INVENTARIO_ID))
        {
            <a asp-controller="Inventario"
               asp-action="Details"
               asp-route-id="@Model.INVENTARIO_ID"
               class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        }
        @* Si no tiene inventario, volver al listado con filtro por producto *@
        else 
        {
            <a asp-controller="Inventario"
               asp-action="Index"
               asp-route-Search="@Model.PRODUCTO_ID"
               class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Volver a Inventario
            </a>
        }

    </div>

    <div class="table-responsive">
        <table class="table ua-table align-middle">
            <thead>
                <tr>
                    <th>Precio Q</th>
                    <th>Desde</th>
                    <th>Hasta</th>
                    <th>Usuario</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items?.Count > 0)
                {
                    foreach (var r in Model.Items)
                    {
                        <tr>
                            <td class="text-end">@r.PRECIO.ToString("N2")</td>
                            <td>@r.DESDE.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@(r.HASTA?.ToString("dd/MM/yyyy HH:mm") ?? "—")</td>
                            <td>@r.USUARIO</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="4" class="text-center text-muted py-4">Sin cambios de precio.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
