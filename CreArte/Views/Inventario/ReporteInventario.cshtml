@model CreArte.ModelsPartial.ReporteViewModel<CreArte.ModelsPartial.InventarioListItemVM>
@{
    Layout = null;

    var titulo = string.IsNullOrWhiteSpace(Model.ReportTitle) ? "Reporte de Inventario" : Model.ReportTitle;
    var logoUrl = string.IsNullOrWhiteSpace(Model.LogoUrl) ? Url.Content("~/Imagenes/logoCreArte.png") : Model.LogoUrl;
    var empresaInfo = string.IsNullOrWhiteSpace(Model.CompanyInfo) ? "CreArte Manualidades" : Model.CompanyInfo;
    var generadoPor = string.IsNullOrWhiteSpace(Model.GeneratedBy) ? "" : Model.GeneratedBy;

    var totalActivos = Model.GetTotal("Activos");
    var totalInactivos = Model.GetTotal("Inactivos");
    var totalStockBajo = Model.GetTotal("StockBajo");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@titulo</title>
    <style>

        /* Reset seguro PDF */
        * {
            box-sizing: border-box
        }

        html, body {
            margin: 0;
            padding: 0;
            background: #fff
        }

        body {
            font-family: Arial,Helvetica,sans-serif;
            font-size: 12px;
            color: black;
            line-height: 1.35
        }

        /* ================= Header minimal ================= */
        .header {
            color: black;
            padding: 10px 10px;
            border-radius: 5px;
        }

        .header-table {
            width: 100%;
            border-collapse: collapse
        }

            .header-table td {
                border: 0;
                vertical-align: middle;
                background: transparent !important;
            }

        .h-left {
            font-size: 30px;
            font-weight: bold;
            letter-spacing: .3px
        }

        .h-sub {
            font-size: 12px;
            margin-top: 2px;
        }

        .h-right {
            width: 70px;
            text-align: right
        }

        .logo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .logo {
            width: 110px;
            height: 60px;
            object-fit: cover;
            object-position: center;
            display: inline-block;
            border-radius: 8px;
        }

        /* ================= Chips / Rango ================= */
        .container {
            padding: 12px 18px 14px 18px
        }

        .chips {
            margin: 2px 0 6px 0
        }

        .chip {
            display: inline-block;
            font-size: 10px;
            padding: 3px 8px;
            margin: 0 6px 6px 0;
            border-radius: 999px;
            border: 1px solid #E6E6E6;
            background: #FFF9E0
        }

        .chip--ok {
            background: #F5FFD1;
            border-color: #E6F4AA
        }

        .chip--no {
            background: #FFE6EE;
            border-color: #F5B4C8
        }

        .range {
            display: inline-block;
            background: #F2B90F;
            color: black;
            font-weight: bold;
            padding: 5px 10px;
            border-radius: 999px;
            border: 1px solid #EAC34B;
            margin: 0 0 6px 0
        }

        /* ================= Tabla ================= */
        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            margin-top: 6px
        }

        th, td {
            padding: 9px 10px;
            vertical-align: middle;
            text-align: center;
            border-bottom: 1px solid #C5D930;
        }

        thead th {
            background: #C5D930;
            color: black;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: .5px;
        }

            thead th:first-child {
                border-top-left-radius: 7px
            }

            thead th:last-child {
                border-top-right-radius: 7px
            }

        .nowrap {
            white-space: nowrap
        }

        /* Imagen producto */
        .thumb {
            width: 38px;
            height: 38px;
            border-radius: 8px;
            object-fit: cover;
            border: 1px solid #eee;
            background: #fafafa;
        }

        /* Badges estado */
        .badge {
            display: inline-block;
            padding: 2px 10px;
            border-radius: 999px;
            font-size: 11px;
        }

        .badge--ok {
            background: #03C1FF;
            color: white;
        }

        .badge--no {
            background: #FF007D;
            color: #fff;
        }

        /* ================= Totales ================= */
        .totals {
            margin-top: 10px;
            padding: 8px 10px;
            border-radius: 10px;
            border: 1px solid #DDEB8B;
            color: #242259;
            font-weight: bold
        }

            .totals .ok {
                color: #03C1FF
            }

            .totals .no {
                color: #FF007D
            }

        /* ================= Footer ================= */
        .note {
            margin-top: 8px;
            font-size: 10px;
            color: black;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <table class="header-table">
            <tr>
                <td>
                    <div class="h-left">@titulo</div>
                    <div class="h-sub">
                        @empresaInfo
                        @if (!string.IsNullOrWhiteSpace(generadoPor))
                        {
                            <text> | Generado por: @generadoPor</text>
                        }
                        | @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")
                    </div>
                </td>
                <td class="h-right">
                    <span class="logo"><img src="@logoUrl" alt="Logo" /></span>
                </td>
            </tr>
        </table>
    </header>

    <main class="container">
        <!-- Chips -->
        <div class="chips">
            @if (!string.IsNullOrWhiteSpace(Model.Search))
            {
                <span class="chip">Buscar: @Model.Search</span>
            }

            @foreach (var kv in Model.ExtraFilters)
            {
                <span class="chip">@kv.Key: @kv.Value</span>
            }
        </div>

        <!-- Tabla Inventario -->
        <table>
            <thead>
                <tr>
                    <th class="nowrap" style="width:10%;">Inventario</th>
                    <th class="nowrap" style="width:10%;">Imagen</th>
                    <th style="width:30%;">Producto</th>
                    <th class="nowrap" style="width:10%;">Stock actual</th>
                    <th class="nowrap" style="width:10%;">Stock mínimo</th>
                    <th class="nowrap" style="width:10%;">Precio unitario</th>
                    @* <th class="nowrap" style="width:10%;">Vence</th> *@
                    <th class="nowrap" style="width:10%;">Estado</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items != null && Model.Items.Any())
                {
                    foreach (var i in Model.Items)
                    {
                        // Resolvemos la ruta de la imagen
                        var imgSrc = string.IsNullOrWhiteSpace(i.ImagenUrl)
                        ? null
                        : Url.Content(i.ImagenUrl);

                        <tr>
                            <td class="nowrap">@i.INVENTARIO_ID</td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(imgSrc))
                                {
                                    <img src="@imgSrc" alt="Producto" class="thumb" />
                                }
                                else
                                {
                                    <span style="font-size:10px;color:#999;">Sin imagen</span>
                                }
                            </td>
                            <td style="text-align:left;">@i.ProductoNombre</td>
                            <td class="nowrap">@i.STOCK_ACTUAL</td>
                            <td class="nowrap">@i.STOCK_MINIMO</td>
                            <td class="nowrap">@i.COSTO_UNITARIO.ToString("Q0.00")</td>
                            @* <td class="nowrap">@i.FECHA_VENCIMIENTO?.ToString("dd/MM/yyyy")</td> *@
                            <td>
                                @if (i.ESTADO)
                                {
                                    <span class="badge badge--ok">Activo</span>
                                }
                                else
                                {
                                    <span class="badge badge--no">Inactivo</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="7" style="text-align:center;padding:16px;">No hay datos para mostrar.</td></tr>
                }
            </tbody>
        </table>

        <!-- Totales -->
        <div class="totals">
            Total de registros: @Model.Items?.Count
            · <span class="ok">Activos: @totalActivos</span>
            · <span class="no">Inactivos: @totalInactivos</span>
            · <span class="no">Con stock bajo: @totalStockBajo</span>
        </div>

        <div class="note">
            CreArte Manualidades | Reporte de inventario generado automáticamente.
        </div>
    </main>
</body>
</html>
