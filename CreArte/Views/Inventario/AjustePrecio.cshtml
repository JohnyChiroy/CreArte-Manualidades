@model CreArte.ModelsPartial.InventarioAjustePrecioVM
@{
    Layout = null;
}
<form id="form-ajuste-precio" asp-action="AjustePrecio" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PRODUCTO_ID" />

    <div class="row g-2">
        <div class="col-md-6">
            <label class="form-label">Producto</label>
            <input class="form-control" value="@Model.PRODUCTO_ID" readonly />
        </div>
        <div class="col-md-6">
            <label class="form-label">Costo actual</label>
            <input class="form-control" value="@((Model.CostoActual ?? 0m).ToString("N2"))" readonly />
        </div>
    </div>

    <div class="mt-2">
        <label asp-for="NuevoCostoUnitario" class="form-label"></label>
        <input asp-for="NuevoCostoUnitario" class="form-control" />
        <span asp-validation-for="NuevoCostoUnitario" class="text-danger"></span>
    </div>

    <div class="mt-2">
        <label asp-for="Razon" class="form-label"></label>
        <textarea asp-for="Razon" rows="3" class="form-control"
                  placeholder="Ej.: Lista nueva del proveedor, redondeo, etc."></textarea>
        <span asp-validation-for="Razon" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-2">
        <button type="button" class="btn-cancel" onclick="Swal.close()">Cancelar</button>
        <button type="submit" class="btn-confirmado">Guardar ajuste de precio</button>
    </div>
</form>