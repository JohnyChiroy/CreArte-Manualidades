@model CreArte.ModelsPartial.InventarioAjusteVM
@{
    Layout = null;
}
<form id="form-ajuste-entrada" asp-action="AjusteEntrada" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PRODUCTO_ID" />
    <input type="hidden" asp-for="TIPO_MOVIMIENTO" value="ENTRADA" />

    <div class="mb-2">
        <label class="form-label">Producto</label>
        <input class="form-control" value="@Model.PRODUCTO_ID" readonly />
    </div>

    <div class="mb-2">
        <label asp-for="CANTIDAD" class="form-label"></label>
        <input asp-for="CANTIDAD" class="form-control" />
        <span asp-validation-for="CANTIDAD" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Razon" class="form-label"></label>
        <textarea asp-for="Razon" rows="3" class="form-control"
                  placeholder="Ej.: Ajuste por conteo físico, ingreso no documentado, etc."></textarea>
        <span asp-validation-for="Razon" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <button type="button" class="btn-cancel" onclick="Swal.close()">Cancelar</button>
        <button type="submit" class="btn-confirmado">Guardar ajuste</button>
    </div>
</form>
