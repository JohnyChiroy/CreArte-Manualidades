@model CreArte.ModelsPartial.InventarioAjusteVM
@{
    ViewData["Title"] = "Ajuste de Entrada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-3">
    <h3 class="mb-3">Ajuste de Entrada</h3>

    <!-- Formulario: POST /Inventario/AjusteEntrada -->
    <form asp-action="AjusteEntrada" method="post" class="row g-3">

        @* AntiForgery *@
        @Html.AntiForgeryToken()

        <!-- PRODUCTO_ID (solo lectura en UI, pero se envía en hidden real) -->
        <div class="col-md-6">
            <label class="form-label">Producto ID</label>
            <input class="form-control" value="@Model.PRODUCTO_ID" readonly />
            <input type="hidden" asp-for="PRODUCTO_ID" />
        </div>

        <!-- TIPO_MOVIMIENTO fijo (ENTRADA) -->
        <input type="hidden" asp-for="TIPO_MOVIMIENTO" value="ENTRADA" />

        <!-- CANTIDAD -->
        <div class="col-md-6">
            <label asp-for="CANTIDAD" class="form-label"></label>
            <input asp-for="CANTIDAD" class="form-control" />
            <span asp-validation-for="CANTIDAD" class="text-danger"></span>
        </div>

        <!-- RAZÓN (se guarda en KARDEX.REFERENCIA) -->
        <div class="col-12">
            <label asp-for="Razon" class="form-label"></label>
            <textarea asp-for="Razon" class="form-control" rows="3"
                      placeholder="Ej.: Ajuste por conteo físico, ingreso no documentado, etc."></textarea>
            <span asp-validation-for="Razon" class="text-danger"></span>
        </div>

        <div class="col-12 d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar ajuste</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
