@model CreArte.ModelsPartial.VentasReportVM
@using System.Text.Json
@{
    /* -----------------------------------------------------------
       Vista PDF de Ventas (wkhtmltopdf/Rotativa)
       - Usa tu VentasReportVM real:
         LabelsPeriodo (List<string>)
         SeriesPeriodo (List<Serie> { Label, Color, Data<List<decimal>> })
         TopProductos (List<CategoriaValor>)
         MetodosPago (List<EtiquetaValor>) ← aquí graficamos por Categoría (Q)
         TotalPeriodo (decimal)
         TicketsPeriodo (int)
       - Layout = null para un PDF “limpio”
       ----------------------------------------------------------- */
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Reporte de Ventas</title>

    <!-- Chart.js (se renderiza en wkhtmltopdf con --enable-javascript) -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <style>
        /* ========== Paleta CreArte ========== */
        :root {
            --cre-magenta: #BF265E;
            --cre-mag2: #BF419E;
            --cre-navy: #242259;
            --cre-lime: #C5D930;
            --cre-gold: #F2B90F;
        }

        /* ======= Estilos PDF ======= */
        body {
            font-family: 'Segoe UI', Tahoma, sans-serif;
            margin: 18px;
            color: #222;
        }

        .hdr {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 3px solid var(--cre-magenta);
            padding-bottom: 8px;
            margin-bottom: 12px;
        }

        .title {
            margin: 0;
            font-size: 20px;
            font-weight: 800;
            color: var(--cre-navy);
            letter-spacing: .3px
        }

        .sub {
            color: #666;
            font-size: 12px
        }

        .grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 14px
        }

        .card {
            border: 1px solid #eee;
            border-radius: 12px;
            padding: 10px
        }

        h6 {
            margin: 0 0 6px 0;
            color: #222
        }

        .kpis {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
            margin-top: 12px
        }

        .kpi {
            border: 1px solid #eee;
            border-radius: 12px;
            padding: 10px
        }

            .kpi .lbl {
                font-size: 12px;
                color: #777
            }

            .kpi .val {
                font-size: 22px;
                font-weight: 800;
                color: var(--cre-magenta)
            }

        .foot {
            margin-top: 10px;
            text-align: right;
            color: #888;
            font-size: 11px
        }
    </style>
</head>
<body>
    <!-- ======= Header ======= -->
    <div class="hdr">
        <div>
            <h1 class="title">Ventas</h1>
            <div class="sub">CreArte Manualidades</div>
        </div>
        <div class="sub">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</div>
    </div>

    <!-- ======= Grids de gráficos ======= -->
    <div class="grid">
        <!-- Línea/Área: Serie(s) por período (Q por mes) -->
        <div class="card">
            <h6>Total por mes (Q)</h6>
            <canvas id="chSeriePeriodo" height="190"></canvas>
        </div>

        <!-- Barras horizontales: Top productos por cantidad -->
        <div class="card">
            <h6>Top 5 productos (cantidad)</h6>
            <canvas id="chTopProd" height="190"></canvas>
        </div>
    </div>

    <div class="grid" style="margin-top:14px">
        <!-- Pie/Doughnut: Ventas por categoría (Q) -->
        <div class="card">
            <h6>Ventas por categoría (Q)</h6>
            <canvas id="chCat" height="210"></canvas>
        </div>

        <!-- KPIs -->
        <div class="kpis">
            <div class="kpi">
                <div class="lbl">Total del período (Q)</div>
                <div class="val">@Model.TotalPeriodo</div>
            </div>
            <div class="kpi">
                <div class="lbl">Tickets del período</div>
                <div class="val" style="color:var(--cre-navy)">@Model.TicketsPeriodo</div>
            </div>
        </div>
    </div>

    <div class="foot">Generado con Rotativa | Chart.js</div>

    <script>
        /* ============================================================
           Serializamos datos de tu ViewModel (con System.Text.Json)
           ============================================================ */
        const CRE_MAGENTA="#BF265E", CRE_GOLD="#F2B90F", CRE_NAVY="#242259", CRE_LIME="#C5D930", CRE_MAGENTA2="#BF419E";

        /* 1) Serie(s) por periodo */
        const labelsPeriodo = @Html.Raw(JsonSerializer.Serialize(Model.LabelsPeriodo));
        const series = @Html.Raw(JsonSerializer.Serialize(Model.SeriesPeriodo)); // [{label,color,data[]},...]

        new Chart(document.getElementById('chSeriePeriodo'), {
          type: 'line',
          data: {
            labels: labelsPeriodo,
            datasets: series.map(s => ({
              label: s.Label,
              data: s.Data,
              borderColor: s.Color ?? CRE_MAGENTA,
              backgroundColor: (s.Color ?? CRE_MAGENTA) + "22",
              borderWidth: 3,
              tension: .35,
              fill: true
            }))
          },
          options: {
            plugins: { legend: { position: 'bottom' } },
            scales: { y: { beginAtZero: true } }
          }
        });

        /* 2) Top productos (barras horizontales) */
        const topProdLabels = @Html.Raw(JsonSerializer.Serialize(Model.TopProductos.Select(x => x.Categoria)));
        const topProdVals   = @Html.Raw(JsonSerializer.Serialize(Model.TopProductos.Select(x => x.Valor)));

        new Chart(document.getElementById('chTopProd'), {
          type: 'bar',
          data: {
            labels: topProdLabels,
            datasets: [{
              data: topProdVals,
              backgroundColor: [CRE_NAVY, CRE_GOLD, CRE_MAGENTA, CRE_LIME, CRE_MAGENTA2]
            }]
          },
          options: {
            indexAxis: 'y',
            plugins: { legend: { display: false } },
            scales: { x: { beginAtZero: true } }
          }
        });

        /* 3) Pie por categoría (usamos MetodosPago como Etiqueta/Valor) */
        const catLabels = @Html.Raw(JsonSerializer.Serialize(Model.MetodosPago.Select(x => x.Etiqueta)));
        const catVals   = @Html.Raw(JsonSerializer.Serialize(Model.MetodosPago.Select(x => x.Valor)));

        new Chart(document.getElementById('chCat'), {
          type: 'doughnut',
          data: {
            labels: catLabels,
            datasets: [{
              data: catVals,
              backgroundColor: [CRE_GOLD, CRE_NAVY, CRE_MAGENTA, CRE_LIME, CRE_MAGENTA2]
            }]
          },
          options: {
            plugins: { legend: { position: 'bottom' } }
          }
        });
    </script>
</body>
</html>
