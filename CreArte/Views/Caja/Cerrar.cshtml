@model CreArte.ModelsPartial.CajaCierreVM
@{
    ViewData["Title"] = "Cerrar Caja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-3">
    <!-- Toolbar -->
    <div class="ua-toolbar">
        <h2 class="m-0">Cerrar sesión de caja</h2>
        <div class="d-flex align-items-center gap-2">
            <!-- OJO: ahora va a Details -->
            <a asp-controller="Caja" asp-action="Details" asp-route-id="@Model.CajaSesionId" class="ua-btn ua-btn-reporte" title="Ver movimientos">
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M6 2a2 2 0 0 0-2 2v16c0 1.1.9 2 2 2h12a2 2 0 0 0 2-2V8l-6-6H6zm7 7V3.5L18.5 9H13zM8 13h8v2H8v-2z" /></svg>
                DETALLE
            </a>
        </div>
        <div></div>
    </div>

    <div class="ua-card">
        <!-- Resumen de montos -->
        <div class="row g-3">
            <div class="col-md-3">
                <div class="ua-stat p-3 border rounded-3">
                    <div class="text-muted small text-center">Monto inicial</div>
                    <div class="fs-5 fw-semibold text-center">Q @Model.MontoInicial.ToString("N2")</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="ua-stat p-3 border rounded-3">
                    <div class="text-muted small text-center">Ingresos</div>
                    <div class="fs-5 fw-semibold text-center">Q @Model.TotalIngresos.ToString("N2")</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="ua-stat p-3 border rounded-3">
                    <div class="text-muted small text-center">Egresos</div>
                    <div class="fs-5 fw-semibold text-center">Q @Model.TotalEgresos.ToString("N2")</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="ua-stat p-3 border rounded-3">
                    <div class="text-muted small text-center">Saldo final</div>
                    <div class="fs-5 fw-semibold text-center" style="color:#BF265E">Q @Model.SaldoFinal.ToString("N2")</div>
                </div>
            </div>
        </div>

        <!-- Form de cierre -->
        <form asp-controller="Caja" asp-action="Cerrar" method="post" id="frmCerrar" class="mt-3"
              data-saldo="@Model.SaldoFinal.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)">
            @Html.AntiForgeryToken()

            <!-- IDs necesarios para el POST -->
            <input type="hidden" asp-for="CajaSesionId" />
            <!-- IMPORTANTE: no usar asp-for para que no lo sobreescriba ModelState -->
            <input type="hidden" name="UsuarioId" value="@(Model.UsuarioId ?? User.Identity?.Name)" />

            <div class="mb-3">
                <label asp-for="Observaciones" class="form-label"><strong>Observaciones de cierre:</strong></label>
                <textarea asp-for="Observaciones" class="form-control" maxlength="250" placeholder="Opcional (arqueo, diferencias, etc.)"></textarea>
            </div>

            <div class="ua-actions">
                <a class="btn-cancel" href="@Url.Action("Index", "Caja")">
                    <i class="bi bi-x-circle"></i> <span>Cancelar</span>
                </a>
                <button id="btnCerrar" type="submit" class="btn-save">
                    <i class="bi bi-lock-fill"></i> <span>Cerrar caja</span>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Confirmación + anti doble submit
        (function(){
            const frm = document.getElementById('frmCerrar');
            let sending = false;

            frm.addEventListener('submit', function(e){
                e.preventDefault();
                if (sending) return;

                const saldo = Number(frm.getAttribute('data-saldo') || '0'); // ya viene en invariant culture
                Swal.fire({
                    icon:'question',
                    title:'¿Cerrar caja?',
                    html:`Saldo final: <b>Q ${saldo.toFixed(2)}</b>`,
                    showCancelButton:true,
                    confirmButtonText:'Cerrar',
                    cancelButtonText:'Revisar'
                }).then(r=>{
                    if(!r.isConfirmed) return;
                    sending = true;
                    frm.querySelector('#btnCerrar').disabled = true;
                    frm.submit();
                });
            });

            // Mensajes TempData
            const ok  = '@(TempData["ok"] ?? "")';
            const err = '@(TempData["error"] ?? "")';
            if (ok)  Swal.fire({icon:'success',title:ok,timer:2600,showConfirmButton:false});
            if (err) Swal.fire({icon:'error',title:err,timer:2800,showConfirmButton:false});
        })();
        (function () {
          const form   = document.getElementById('frmCerrar');
          const btn    = document.getElementById('btnCerrar');
          const sesion = document.getElementById('CajaSesionId') || document.querySelector('[name="CajaSesionId"]');
          const user   = document.getElementById('UsuarioId')    || document.querySelector('[name="UsuarioId"]');
          // Observaciones es opcional; si quisieras volverlo obligatorio, descomenta la línea marcada.

          function evalReady() {
            const okSesion = !!(sesion && (sesion.value||'').trim().length > 0);
            const okUser   = !!(user   && (user.value  ||'').trim().length > 0);
            // const obs     = document.getElementById('Observaciones') || document.querySelector('[name="Observaciones"]');
            // const okObs   = !!(obs && (obs.value || '').trim().length > 0);
            const ready = okSesion && okUser; // && okObs si quieres forzar observaciones

            if (btn) {
              btn.disabled = !ready;
              btn.classList.toggle('enabled', ready);
              btn.setAttribute('aria-disabled', String(!ready));
              btn.title = ready ? 'Cerrar caja' : 'Complete los datos requeridos';
            }
          }

          // Primera evaluación
          evalReady();

          // Re-evaluaciones por si algo cambia (user/sesion normalmente hidden)
          [sesion, user].forEach(el => el && el.addEventListener('input', evalReady));

          // Confirmación + envío
          if (form) {
            form.addEventListener('submit', function (e) {
              if (btn && btn.disabled) {
                e.preventDefault();
                Swal.fire({ icon:'warning', title:'Campos incompletos', text:'No se puede cerrar aún.' });
                return;
              }
              e.preventDefault();
              // Trata de obtener el saldo de la pantalla para mostrarlo en el modal
              const saldoRaw = (document.getElementById('SaldoFinal') || document.querySelector('[name="SaldoFinal"]') || { value: '@Model?.SaldoFinal' }).value ?? '@Model?.SaldoFinal';
              const saldo = Number(String(saldoRaw).replace(',', '.')) || 0;

              Swal.fire({
                icon:'question',
                title:'¿Cerrar caja?',
                html:`Saldo final: <b>Q ${saldo.toFixed(2)}</b>`,
                showCancelButton:true,
                confirmButtonText:'Cerrar',
                cancelButtonText:'Revisar'
              }).then(r => {
                if (r.isConfirmed) form.submit();
              });
            });
          }
        })();
    </script>
}
