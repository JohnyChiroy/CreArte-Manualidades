@*
  Layout principal de la aplicación (post-login)
  - Header magenta con título y usuario + botón salir
  - Sidebar dorado con módulos
  - Contenido al centro con @RenderBody()
*@
@{
    var usuario = ViewBag.Nombre as string ?? "Usuario";
    Layout = null; // este es un layout raíz
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CreArte</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap (solo para reset/grid básico) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <!-- Bootstrap Icons para íconos del menú -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Estilos de la app -->
    <link rel="stylesheet" href="~/css/PantallaPrincipal.css" asp-append-version="true" />
</head>
<body>
    <!-- Header superior -->
    <header class="app-header">
        <button class="btn-icon" id="btnToggle">
            <i class="bi bi-list"></i>
        </button>

        <h1 class="app-title">Bienvenido</h1>

        <div class="app-user">
            <span class="user-name">@usuario</span>
            <a class="btn-icon" title="Cerrar sesión" href="@Url.Action("Logout", "Login")">
                <i class="bi bi-box-arrow-right"></i>
            </a>
        </div>
    </header>

    <!-- Contenedor principal con sidebar + contenido -->
    <div class="app-shell">
        <!-- Sidebar -->
        <aside class="app-sidebar" id="sidebar">
            <div class="sidebar-title">Módulos</div>

            <!-- Items del menú (rutas de ejemplo; ajusta cuando crees los módulos) -->
            <nav class="sidebar-nav">
                <a asp-controller="Home" asp-action="Index" class="nav-item">
                    <i class="bi bi-cash-stack"></i> <span>Caja</span>
                </a>
                <a asp-controller="Ventas" asp-action="Index" class="nav-item">
                    <i class="bi bi-bag"></i> <span>Ventas</span>
                </a>
                <a asp-controller="Pedidos" asp-action="Index" class="nav-item">
                    <i class="bi bi-card-checklist"></i> <span>Pedidos</span>
                </a>
                <a asp-controller="Clientes" asp-action="Index" class="nav-item">
                    <i class="bi bi-people"></i> <span>Clientes</span>
                </a>
                <a asp-controller="Productos" asp-action="Index" class="nav-item">
                    <i class="bi bi-box"></i> <span>Productos</span>
                </a>
                <a asp-controller="Inventario" asp-action="Index" class="nav-item">
                    <i class="bi bi-stack"></i> <span>Inventario</span>
                </a>
                <a asp-controller="Compras" asp-action="Index" class="nav-item">
                    <i class="bi bi-basket"></i> <span>Compras</span>
                </a>
                <a asp-controller="Proveedores" asp-action="Index" class="nav-item">
                    <i class="bi bi-truck"></i> <span>Proveedores</span>
                </a>

                <div class="sidebar-sep"></div>

                <a asp-controller="Empleados" asp-action="Index" class="nav-item">
                    <i class="bi bi-person-badge"></i> <span>Empleados</span>
                </a>
                <a asp-controller="Puestos" asp-action="Index" class="nav-item">
                    <i class="bi bi-diagram-3"></i> <span>Puestos</span>
                </a>
                <a asp-controller="Usuarios" asp-action="Index" class="nav-item">
                    <i class="bi bi-person-gear"></i> <span>Usuarios</span>
                </a>

                <div class="sidebar-sep"></div>

                <a asp-controller="Reportes" asp-action="Index" class="nav-item">
                    <i class="bi bi-graph-up"></i> <span>Reportes</span>
                </a>
            </nav>
        </aside>

        <!-- Contenido -->
        <main class="app-content">
            @RenderBody()
        </main>
    </div>

    <!-- JS simple para colapsar sidebar -->
    <script src="~/js/PantallaPrincipal.js" asp-append-version="true"></script>
</body>
</html>


