<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CreArte</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap (solo para reset/grid básico) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <!-- Bootstrap Icons para íconos del menú -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Estilos de la app -->
    <link rel="stylesheet" href="~/css/PantallaPrincipal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/UsuarioIndex.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/UsuarioCreate.css" asp-append-version="true" />

    @* Esta línea le dice al layout que inserte el contenido de la sección "Styles"
   de cada vista que la defina. "required: false" evita errores si una vista
   NO define la sección. *@
    @RenderSection("Styles", required: false)

</head>
<body>
    
    
    <div class="app-shell">
        @* referencias a partial views *@
        @await Html.PartialAsync("header")

        @await Html.PartialAsync("sidebar")

        
    <!-- Contenido -->
        <main class="app-content">
            @RenderBody()
        </main>

    </div>  
    @RenderSection("Scripts", required: false)
    @* referencias a JS específicos de vistas *@
    <script src="~/js/PantallaPrincipal.js" asp-append-version="true"></script>
    <script src="~/js/UsuarioIndex.js" asp-append-version="true"></script>
    <script src="~/js/UsuarioCreate.js" asp-append-version="true"></script>
</body>
</html>
