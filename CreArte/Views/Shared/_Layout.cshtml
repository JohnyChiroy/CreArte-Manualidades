@{
    // Tomamos el nombre del controlador actual para exponerlo al <body>
    var currentController = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLower();
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CreArte</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <!-- Bootstrap Icons (una sola vez) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- SweetAlert2 CSS (opcional, recomendado) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />

    <!-- Estilos de la app -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/PantallaPrincipal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/css/UsuarioCreate.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/litepicker@2.0.12/dist/css/litepicker.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    @RenderSection("Styles", required: false)
</head>
<body data-current-controller="@currentController">
    <!-- importante para auto-abrir el submenú por ruta -->
    <div class="app-shell">
        @await Html.PartialAsync("header")
        @await Html.PartialAsync("sidebar")

        <main class="app-content">
            @RenderBody()
        </main>
    </div>

    @* 1) Bootstrap: DEBE ir antes que el sidebar (usa Collapse). 
       OJO: sin integrity/crossorigin para evitar el bloqueo SRI. *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @* 2) Librerías de terceros *@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/litepicker@2.0.12/dist/litepicker.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    @* 3) JS del sidebar (usa Bootstrap Collapse) *@
    @* <script src="~/js/sidebar.js" asp-append-version="true"></script> *@

    @* 4) JS globales de tu app *@
    <script src="~/js/PantallaPrincipal.js" asp-append-version="true"></script>
    <script src="~/js/UsuarioIndex.js" asp-append-version="true"></script>
    <script src="~/js/UsuarioCreate.js" asp-append-version="true"></script>
    <script src="~/js/ui-core.js" asp-append-version="true"></script>

    @* 5) Tu módulo global de alertas (depende de SweetAlert2) *@
    <script src="~/js/Alertas.js" asp-append-version="true"></script>

    @* 6) Bootstrap global de SweetAlert2 (parcial) *@
    @await Html.PartialAsync("_SwalBootstrap")

    @* 7) Scripts específicos de cada vista *@
    @RenderSection("Scripts", required: false)

</body>
</html>
