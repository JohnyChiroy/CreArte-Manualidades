@* ===============================================
   RUTA: Views/Puestos/Delete.cshtml
   DESCRIPCIÓN: Confirmación de borrado lógico (ELIMINADO = 1)
   =============================================== *@
@model CreArte.Models.PUESTO
@{
    ViewData["Title"] = "Eliminar Puesto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ua-card">
    <h2 style="margin:0 0 12px 0;">Eliminar Puesto</h2>

    <div class="ua-note" aria-live="polite">
        <strong>Confirmación:</strong> Esta acción efectuará <b>eliminación lógica</b> del registro (no se borra físicamente).
    </div>

    <!-- Datos en lectura -->
    <div class="ua-row" style="margin-top:8px;">
        <div class="ua-field">
            <div class="ua-kv">
                <label><strong>Código:</strong></label>
                <input value="@Model.PUESTO_ID" class="form-control" readonly />
            </div>
        </div>
        <div class="ua-field">
            <div class="ua-kv">
                <label><strong>Estado:</strong></label>
                <span class="ua-pill@(Model.ESTADO ? " active" : "")">@(Model.ESTADO ? "Activo" : "Inactivo")</span>
            </div>
        </div>
    </div>

    <div class="ua-field" style="margin-top:8px;">
        <label><strong>Nombre del puesto:</strong></label>
        <input value="@Model.PUESTO_NOMBRE" class="form-control" readonly />
    </div>

    <div class="ua-field" style="margin-top:8px;">
        <label><strong>Descripción:</strong></label>
        <textarea class="form-control" rows="3" readonly>@Model.PUESTO_DESCRIPCION</textarea>
    </div>

    <!-- Acciones -->
    <form asp-action="Delete" asp-controller="Puestos" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PUESTO_ID" />
        <div class="ua-actions">
            <a class="btn-cancel" asp-action="Index" asp-controller="Puestos">
                <i class="bi bi-arrow-left"></i> <span>Cancelar</span>
            </a>
            <button type="submit" class="btn-save enabled">
                <i class="bi bi-trash"></i> <span>Eliminar</span>
            </button>
        </div>
    </form>
</div>
