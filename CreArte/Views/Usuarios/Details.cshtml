@* ===============================================
   RUTA: Views/Usuarios/Details.cshtml
   DESCRIPCIÓN: PartialView (Layout = null) para inyectar en SweetAlert2
   - Muestra datos de Usuario + Rol + Empleado
   - Incluye auditoría y acciones (Volver / Editar)
   =============================================== *@
@model CreArte.ModelsPartial.UsuarioDetailsVM
@{
    ViewData["Title"] = "Detalle de Usuario";
    Layout = null; // <- importante para render en modal
}

<div class="ua-card">
    <!-- Fila superior: Código + Estado -->
    <div class="ua-row">
        <div class="ua-field">
            <div class="ua-kv">
                <label><strong>Código Usuario:</strong></label>
                <input value="@Model.USUARIO_ID" class="form-control" readonly />
            </div>
        </div>
        <div class="ua-field">
            <div class="ua-kv">
                <label><strong>Estado:</strong></label>
                <span class="ua-pill@(Model.ESTADO ? " active" : "")">
                    @(Model.ESTADO ? "Activo" : "Inactivo")
                </span>
            </div>
        </div>
    </div>

    <!-- Usuario + Correo -->
    <div class="ua-row" style="margin-top:8px;">
        <div class="ua-field" style="flex:1 1 50%;">
            <label><strong>Usuario:</strong></label>
            <input value="@Model.USUARIO_NOMBRE" class="form-control" readonly />
        </div>
        <div class="ua-field" style="flex:1 1 50%;">
            <label><strong>Correo:</strong></label>
            <input value="@(Model.USUARIO_CORREO ?? "")" class="form-control" readonly />
        </div>
    </div>

    <!-- Rol -->
    <div class="ua-row" style="margin-top:8px;">
        <div class="ua-field" style="flex:1 1 100%;">
            <label><strong>Rol:</strong></label>
            <input value="@($"{Model.ROL_NOMBRE} ({Model.ROL_ID})")" class="form-control" readonly />
        </div>
    </div>

    <!-- Empleado asignado -->
    <div class="ua-row" style="margin-top:8px;">
        <div class="ua-field" style="flex:1 1 100%;">
            <label><strong>Empleado asignado:</strong></label>
            <input value="@($"{Model.EMPLEADO_NOMBRE_COMPLETO} ({Model.EMPLEADO_ID})")" class="form-control" readonly />
        </div>
    </div>

    <!-- Fecha de registro + Cambio inicial -->
    <div class="ua-row" style="margin-top:8px;">
        <div class="ua-field">
            <label><strong>Fecha de registro:</strong></label>
            <input value="@Model.USUARIO_FECHAREGISTRO.ToString("dd/MM/yyyy HH:mm")" class="form-control" readonly />
        </div>
        <div class="ua-field">
            <label><strong>Cambio inicial requerido:</strong></label>
            <input value="@(Model.USUARIO_CAMBIOINICIAL ? "Sí" : "No")" class="form-control" readonly />
        </div>
    </div>

    <!-- Auditoría -->
    <div class="ua-row" style="margin-top:8px;">
        <div class="ua-field">
            <label><strong>Creado por:</strong></label>
            <input value="@($"{Model.USUARIO_CREACION} - {Model.FECHA_CREACION:dd/MM/yyyy HH:mm}")" class="form-control" readonly />
        </div>
        @if (Model.FECHA_MODIFICACION != null)
        {
            <div class="ua-field">
                <label><strong>Última modificación:</strong></label>
                <input value="@($"{Model.USUARIO_MODIFICACION} - {Model.FECHA_MODIFICACION:dd/MM/yyyy HH:mm}")" class="form-control" readonly />
            </div>
        }
    </div>

    <!-- Acciones -->
    <div class="ua-actions">
        <a class="btn-cancel" asp-action="Index" asp-controller="Usuarios">
            <i class="bi bi-arrow-left"></i> <span>Volver</span>
        </a>
        <a class="btn-save enabled" asp-action="Edit" asp-controller="Usuarios" asp-route-id="@Model.USUARIO_ID">
            <i class="bi bi-pencil-square"></i> <span>Editar</span>
        </a>
    </div>
</div>
