@model CreArte.ModelsPartial.ProveedorDetailsVM
@{
    ViewData["Title"] = "Detalle de Proveedor";
    Layout = null; // importante para renderizar dentro del modal
}

<div class="ua-card">
    <!-- ================= Fila superior: Código + Estado ================ -->
    <div class="ua-row">
        <div class="ua-field">
            <div class="ua-kv">
                <label><strong>Código Proveedor:</strong></label>
                <input value="@Model.PROVEEDOR_ID" class="form-control" readonly />
            </div>
        </div>
        <div class="ua-field">
            <div class="ua-kv">
                <label><strong>Estado:</strong></label>
                <span class="ua-pill@(Model.ESTADO ? " active" : "")">
                    @(Model.ESTADO ? "Activo" : "Inactivo")
                </span>
            </div>
        </div>
    </div>

    <!-- ================= Nombre completo + DPI ================= -->
    <div class="ua-row" style="margin-top:8px;">
        <div class="ua-field" style="flex:1 1 65%;">
            <label><strong>Nombre completo:</strong></label>
            <input value="@(Model.Nombres ?? "")" class="form-control" readonly />
        </div>
        <div class="ua-field" style="flex:1 1 35%;">
            <label><strong>DPI (CUI):</strong></label>
            <input value="@(Model.DPI ?? "")" class="form-control" readonly />
        </div>
    </div>

    <!-- ================= NIT + Empresa ================= -->
    <div class="ua-row" style="margin-top:8px;">
        <div class="ua-field">
            <label><strong>NIT:</strong></label>
            <input value="@(Model.NIT ?? "")" class="form-control" readonly />
        </div>
        <div class="ua-field">
            <label><strong>Empresa:</strong></label>
            <input value="@(Model.EMPRESA ?? "")" class="form-control" readonly />
        </div>
    </div>

    <!-- ================= Observación (Proveedor) ================= -->
    <div class="ua-field" style="margin-top:8px;">
        <label><strong>Observación:</strong></label>
        <textarea class="form-control" rows="2" readonly>@(Model.PROVEEDOR_OBSERVACION ?? "")</textarea>
    </div>

    <!-- ================= Contacto (Casa/Móvil) ================= -->
    <div class="ua-row" style="margin-top:8px;">
        <div class="ua-field">
            <label><strong>Teléfono (Casa):</strong></label>
            <input value="@(Model.TelefonoCasa ?? "")" class="form-control" readonly />
        </div>
        <div class="ua-field">
            <label><strong>Teléfono (Móvil):</strong></label>
            <input value="@(Model.Telefono ?? "")" class="form-control" readonly />
        </div>
    </div>

    <!-- ================= Correo ================= -->
    <div class="ua-row" style="margin-top:8px;">
        <div class="ua-field" style="flex:1 1 100%;">
            <label><strong>Correo:</strong></label>
            <input value="@(Model.Correo ?? "")" class="form-control" readonly />
        </div>
    </div>

    <!-- ================= Dirección ================= -->
    <div class="ua-field" style="margin-top:8px;">
        <label><strong>Dirección:</strong></label>
        <textarea class="form-control" rows="2" readonly>@(Model.Direccion ?? "")</textarea>
    </div>

    <!-- ================= Auditoría ================= -->
    <div class="ua-row" style="margin-top:8px;">
        <div class="ua-field">
            <label><strong>Creado por:</strong></label>
            <input value="@($"{Model.USUARIO_CREACION} - {Model.FECHA_CREACION:dd/MM/yyyy HH:mm:ss}")" class="form-control" readonly />
        </div>
        @if (Model.FECHA_MODIFICACION != null)
        {
            <div class="ua-field">
                <label><strong>Última modificación:</strong></label>
                <input value="@($"{Model.USUARIO_MODIFICACION} - {Model.FECHA_MODIFICACION:dd/MM/yyyy HH:mm:ss}")" class="form-control" readonly />
            </div>
        }
    </div>

    <!-- ================= Acciones ================= -->
    <div class="ua-actions">
        <a class="btn-cancel" asp-action="Index" asp-controller="Proveedores">
            <i class="bi bi-arrow-left"></i> <span>Volver</span>
        </a>
        <a class="btn-save enabled" asp-action="Edit" asp-controller="Proveedores" asp-route-id="@Model.PROVEEDOR_ID">
            <i class="bi bi-pencil-square"></i> <span>Editar</span>
        </a>
    </div>
</div>
