@using CreArte.ModelsPartial
@model CompraRecibirVM

@{
    ViewData["Title"] = "Recibir productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ua-card">
    <!-- Título + volver -->
    <div class="ua-toolbar">
        <h2 class="m-0">Recibir productos - @Model.CompraId</h2>
    </div>
    <br />

    <form asp-action="Recibir" asp-controller="Compras" asp-route-id="@Model.CompraId" method="post" autocomplete="off">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CompraId" />

        <!-- Errores de validación -->
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <!-- Aviso de reglas -->
        <div class="alert alert-info py-2">
            <i class="bi bi-info-circle"></i>
            Los <strong>faltantes se cancelan automáticamente</strong> al guardar. No se permite recibir más de lo pedido.
        </div>
    
        <div class="table-responsive">
            <table class="table table-sm align-middle ua-table-compra text-center">
                <thead class="table-light">
                    <tr>
                        <th>Codigo</th>
                        <th>Producto</th>
                        <th class="text-center">Imagen</th>
                        <th class="text-center">Cant. Pedida</th>
                        <th class="text-center">Precio Compra</th>
                        <th class="text-center">Precio Venta*</th>
                        <th class="text-center">Cantidad Recibida*</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Lineas.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.Lineas[i].ProductoId
                                <input type="hidden" name="Lineas[@i].ProductoId" value="@Model.Lineas[i].ProductoId" />
                            </td>

                            <!-- Nombre visible -->
                            <td>
                                @Model.Lineas[i].ProductoNombre
                                <input type="hidden" name="Lineas[@i].ProductoId" value="@Model.Lineas[i].ProductoId" />
                            </td>

                            <!-- Imagen -->
                            <td>
                                <img class="img-thumbnail js-prod-img ua-img-thumb-fila-details"
                                     src="@(Model.Lineas[i].ImagenProducto ?? "")"
                                     alt="@Model.Lineas[i].ProductoNombre" />
                            </td>
                            <td class="text-center">
                                @Model.Lineas[i].Cantidad
                                <input type="hidden" name="Lineas[@i].Cantidad" value="@Model.Lineas[i].Cantidad" />
                            </td>
                            <td class="text-center">
                                @(Model.Lineas[i].PrecioCompra?.ToString("N2") ?? "-")
                                <input type="hidden" name="Lineas[@i].PrecioCompra"
                                       value="@(Model.Lineas[i].PrecioCompra?.ToString("0.##") ?? "")" />
                            </td>
                            <td class="text-end">
                                <input name="Lineas[@i].PrecioVenta"
                                       type="number" step="0.01"
                                       min="@(Model.Lineas[i].PrecioCompra?.ToString("0.##") ?? "0")"
                                       value="@(Model.Lineas[i].PrecioVenta?.ToString("0.##") ?? "")"
                                       class="form-control form-control-sm text-end"
                                       required />
                            </td>
                            <td class="text-end">
                                <input name="Lineas[@i].CantidadRecibida"
                                       type="number" min="0" max="@Model.Lineas[i].Cantidad"
                                       value="@(Model.Lineas[i].CantidadRecibida?.ToString() ?? "")"
                                       class="form-control form-control-sm text-end" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-3">
            <a asp-action="Details" asp-controller="Compras" asp-route-id="@Model.CompraId"
               class="btn-cancel">Cancelar</a>

            <button type="submit" class="btn-recibir">
                <i class="bi bi-check2-circle"></i> Guardar recepción
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}