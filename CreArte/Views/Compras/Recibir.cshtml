@using CreArte.ModelsPartial
@model CompraRecibirVM

@{
    ViewData["Title"] = "Recibir productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ua-card">
    <!-- Título + volver -->
    <div class="ua-toolbar">
        <h2 class="m-0">Recibir productos — Compra @Model.CompraId</h2>
        <div class="d-flex align-items-center gap-2">
            <a asp-action="Details" asp-controller="Compras" asp-route-id="@Model.CompraId" class="ua-btn">
                <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
                    <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" />
                </svg>
                <span>Volver</span>
            </a>
        </div>
    </div>

    <form asp-action="Recibir" asp-controller="Compras" asp-route-id="@Model.CompraId" method="post" autocomplete="off">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CompraId" />

        <!-- Errores de validación -->
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <!-- Aviso de reglas -->
        <div class="alert alert-info py-2">
            <i class="bi bi-info-circle"></i>
            Los <strong>faltantes se cancelan automáticamente</strong> al guardar. No se permite recibir más de lo pedido.
        </div>

        <div class="table-responsive">
            <table class="table table-sm align-middle ua-table">
                <thead class="table-light">
                    <tr>
                        <th>Producto</th>
                        <th class="text-end">Cant. pedida</th>
                        <th class="text-end">Precio compra</th>
                        <th class="text-end">Cant. recibida</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Lineas.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.Lineas[i].ProductoId
                                <input type="hidden" name="Lineas[@i].ProductoId" value="@Model.Lineas[i].ProductoId" />
                            </td>
                            <td class="text-end">
                                @Model.Lineas[i].Cantidad
                                <input type="hidden" name="Lineas[@i].Cantidad" value="@Model.Lineas[i].Cantidad" />
                            </td>
                            <td class="text-end">
                                @(Model.Lineas[i].PrecioCompra?.ToString("N2") ?? "-")
                                <input type="hidden" name="Lineas[@i].PrecioCompra"
                                       value="@(Model.Lineas[i].PrecioCompra?.ToString("0.##") ?? "")" />
                            </td>
                            <td class="text-end">
                                <input name="Lineas[@i].CantidadRecibida"
                                       type="number" min="0" max="@Model.Lineas[i].Cantidad"
                                       value="@(Model.Lineas[i].CantidadRecibida?.ToString() ?? "")"
                                       class="form-control form-control-sm text-end" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check2-circle"></i> Guardar recepción
            </button>
            <a asp-action="Details" asp-controller="Compras" asp-route-id="@Model.CompraId"
               class="btn btn-outline-secondary">Cancelar</a>
        </div>
    </form>
</div>
