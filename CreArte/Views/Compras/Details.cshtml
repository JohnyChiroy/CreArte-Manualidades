@using CreArte.ModelsPartial
@model CompraDetailsVM

@{
    ViewData["Title"] = "Detalle de compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        /* ============================================================
                   Estilos “heredados” de Detalles de Ventas, adaptados a Compras
                   ============================================================ */

        /* ======== Grid de resumen (stats) ======== */
        .ua-summary {
            display: grid;
            grid-template-columns: repeat(5, minmax(0, 1fr));
            gap: 12px;
            margin-top: 12px;
        }

        @@media (max-width: 1200px) {
            .ua-summary {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        @@media (max-width: 768px) {
            .ua-summary {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (max-width: 576px) {
            .ua-summary {
                grid-template-columns: 1fr;
            }
        }

        .ua-stat {
            border-radius: 10px;
            padding: 12px 14px;
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        /* Paleta alineada a Ventas (colores por “tema” de la tarjeta) */
        .cuadro-Proveedor {
            background: #03C1FF;
            color: white;
        }

        .cuadro-Estado {
            background: #332973;
            color: white;
        }

        .cuadro-Fechas {
            background: #23B6B1;
            color: white;
        }

        .cuadro-Inv {
            background: #FF007D;
            color: white;
        }

        .cuadro-Total {
            background: #F2B90F;
            color: black;
        }
        /* fondo claro: texto oscuro para contraste */

        .ua-stat .caption {
            font-size: .8rem;
            color: inherit;
            text-transform: uppercase;
            letter-spacing: .4px;
        }

        .ua-stat .value {
            font-weight: 700;
            font-size: 1.05rem;
        }

        .ua-stat .sub {
            font-size: .8rem;
            color: inherit;
        }

        /* ======== Tabla con encabezado redondeado ======== */
        .ua-table-container {
            margin-top: 20px;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        }

        .ua-table {
            margin-bottom: 0;
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
        }

            /* Encabezado en color solicitado */
            .ua-table thead th {
                background: #C5D930; /* verde lima de tu encabezado */
                color: black;
                font-weight: 700;
                text-transform: uppercase;
                padding: 5px 5px;
                border: none;
            }

            /* Bordes redondeados SOLO para la fila de encabezado */
            .ua-table thead tr:first-child th:first-child {
                border-top-left-radius: 10px;
            }

            .ua-table thead tr:first-child th:last-child {
                border-top-right-radius: 10px;
            }

            .ua-table tbody td {
                border-top: 1px solid #e5e7eb;
                background: #fff;
                vertical-align: middle;
                padding: 8px 12px;
            }

            .ua-table tfoot td {
                background: #f9fafb;
                border-top: 2px solid #e5e7eb;
                font-weight: 600;
                padding: 10px 12px;
            }

        /* Miniatura de imagen en filas de detalle */
        .ua-img-thumb-fila-details {
            width: 60px;
            height: 60px;
            object-fit: cover;
            object-position: center;
            border-radius: 6px;
            border: 1px solid #e5e7eb;
            background: #f8f9fa;
        }

        /* ======== Microajustes de k/v mini (encabezado anterior) ======== */
        .ua-kv-mini .lbl {
            font-size: .8rem;
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: .4px;
        }

        .ua-kv-mini .val {
            font-weight: 600;
        }

        /* ======== Totales al pie ======== */
        tfoot td {
            font-weight: 600;
        }

        /* ======== Badges de estado de compra (siguen tus clases) ======== */
        .badge.bg-cargada {
            background: #16a34a;
        }
        /* verde */
        .badge.bg-pendiente {
            background: #ef4444;
        }
        /* rojo */
    </style>
}

<div class="ua-card">
    <!-- ========================= TOOLBAR ========================= -->
    <div class="ua-toolbar">
        <h2 class="m-0">Compra @Model.CompraId</h2>

        <div class="ua-toolbar-actions d-flex align-items-center gap-2">
            @* Mantengo exactamente tus acciones/flujo temprano *@

            @* 1) Enviar a revisión: BOR -> REV *@
            @if (Model.EstadoId == "BOR")
            {
                <form asp-action="ToReview" asp-controller="Compras" asp-route-id="@Model.CompraId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-revision" title="Enviar a revisión">
                        <i class="bi bi-clipboard"></i> <span>Enviar a revisión</span>
                    </button>
                </form>
            }

            @* 2) Aprobar: REV -> APR *@
            @if (Model.EstadoId == "REV")
            {
                <form asp-action="Approve" asp-controller="Compras" asp-route-id="@Model.CompraId" method="post" class="d-inline"
                      onsubmit="return confirm('¿Seguro que deseas Aprobar esta compra?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-aprobado" title="Aprobar compra">
                        <i class="bi bi-check2-square"></i> <span>Aprobar</span>
                    </button>
                </form>
            }

            @* 3) Enviar a proveedor: APR -> ENV *@
            @if (Model.EstadoId == "APR")
            {
                <form asp-action="Send" asp-controller="Compras" asp-route-id="@Model.CompraId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-enviado" title="Enviar a proveedor">
                        <i class="bi bi-send"></i> <span>Enviar</span>
                    </button>
                </form>
            }

            @* 4) Confirmar: disponible en ENV / CON *@
            @if (Model.EstadoId is "ENV" or "CON")
            {
                <a asp-action="Confirm" asp-controller="Compras" asp-route-id="@Model.CompraId" class="btn-confirmado" title="Confirmar (fecha y precios)">
                    <i class="bi bi-clipboard-check"></i> <span>Confirmar</span>
                </a>
            }

            @* Anular (según tu flag) *@
            @if (Model.PuedeAnular)
            {
                <form asp-action="Anular" asp-controller="Compras" asp-route-id="@Model.CompraId" method="post" class="d-inline"
                      onsubmit="return confirm('¿Seguro que deseas anular esta compra?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-anular">
                        <i class="bi bi-x-circle"></i> <span>Anular</span>
                    </button>
                </form>
            }
        </div>
    </div>

    <!-- ========================= RESUMEN (estilo Ventas) ========================= -->
    <div class="ua-summary">
        <!-- Proveedor -->
        <div class="ua-stat">
            <div class="caption">Proveedor</div>
            <div class="value">@Model.ProveedorNombre</div>
        </div>

        <!-- Fechas -->
        <div class="ua-stat">
            <div class="caption">Fecha Solicitud</div>
            <div class="value">@Model.FechaCompra.ToString("dd/MM/yyyy")</div>
            <div class="caption">Fecha entrega</div>
            <div class="value">@(Model.FechaEntregaCompra?.ToString("dd/MM/yyyy") ?? "-")</div>
        </div>
        
        <!-- Estado (badge usando tu mapeo de clase) -->
        <div class="ua-stat">
            <div class="caption">Estado</div>
            <div class="value">
                <span class="badge bg-@GetEstadoClass(Model.EstadoId)">@Model.EstadoId</span>
            </div>
            <div class="sub">Flujo: BOR → REV → APR → ENV → CON → REC → CER / ANU</div>
        </div>

        <!-- Estado Inventario y TOTAL CALCULADO -->
        <div class="ua-stat">
            <div class="caption">Inventario</div>
            <div class="value">
                @if (Model.CargadaInventario)
                {
                    <span class="badge bg-cargada">Cargada</span>
                }
                else
                {
                    <span class="badge bg-pendiente">Pendiente</span>
                }
            </div>
            <div class="caption">Total calculado</div>
            <div class="value">
                @{
                    // Vista “read-only”: sumamos como en tu tfoot para mostrar el total aquí también
                    int _tp = 0, _tr = 0;
                    decimal _tm = 0m;
                    foreach (var l in Model.Lineas)
                    {
                        var cant = l.Cantidad;
                        var rec = l.CantidadRecibida ?? 0;
                        var precio = l.PrecioCompra ?? 0m;
                        var baseCalc = l.CantidadRecibida.HasValue ? rec : cant;
                        var subtotal = baseCalc * precio;

                        _tp += cant;
                        _tr += (l.CantidadRecibida ?? 0);
                        _tm += subtotal;
                    }
                }
                Q @_tm.ToString("N2")
            </div>
        </div>

        <!-- OBSERVACIONES -->
        @* <div class="ua-stat"> *@
            <div style="margin-top:8px;">
                <div class="ua-field" style="flex:1 1 100%;">
                    <div class="ua-kv-mini">
                        <div class="lbl">Observaciones</div>
                        <div class="val">@(Model.Observaciones ?? "-")</div>
                    </div>
                </div>
            </div>
        @* </div> *@
    </div>

    <!-- ========================= DETALLE DE LÍNEAS ========================= -->
    <div class="ua-table-container">
        <div class="table-responsive">
            <table class="table table-sm align-middle ua-table">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Producto</th>
                        <th class="text-center">Imagen</th>
                        <th class="text-center">Cant. Pedida</th>
                        <th class="text-center">Precio Compra</th>
                        <th class="text-center">Precio Venta</th>
                        <th class="text-center">Cant. Recibida</th>
                        @* <th>Vencimiento</th> *@
                        <th class="text-center">Subtotal (regla vigente)</th>
                    </tr>
                </thead>
                <tbody>
                    @* Reglas de visualización y acumulados (sin cambiar tu lógica) *@
                    @{
                        int totalPedida = 0;
                        int totalRecibida = 0;
                        decimal totalMonto = 0m;
                    }

                    @foreach (var l in Model.Lineas)
                    {
                        var cant = l.Cantidad;
                        var rec = l.CantidadRecibida ?? 0;
                        var precio = l.PrecioCompra ?? 0m;
                        var precioV = l.PrecioVenta ?? 0m;
                        var baseCalculo = l.CantidadRecibida.HasValue ? rec : cant; /* Si hay recibida, se usa esa; si no, la pedida */
                        var subtotal = baseCalculo * precio;

                        totalPedida += cant;
                        totalRecibida += (l.CantidadRecibida ?? 0);
                        totalMonto += subtotal;

                        <tr>
                            <td>@l.ProductoId</td>
                            <td>@l.ProductoNombre</td>

                            <!-- Imagen (seguimos el estilo miniatura) -->
                            <td class="text-center">
                                <img class="img-thumbnail ua-img-thumb-fila-details"
                                     src="@(l.ImagenProducto ?? "")"
                                     alt="@l.ProductoNombre" />
                            </td>

                            <td class="text-center">@cant</td>
                            <td class="text-center">@precio.ToString("N2")</td>
                            <td class="text-center">@precioV.ToString("N2")</td>
                            <td class="text-center">@((l.CantidadRecibida.HasValue ? rec : (int?)null)?.ToString() ?? "-")</td>
                            @* <td>@(l.FechaVencimiento?.ToString("dd/MM/yyyy") ?? "-")</td> *@
                            <td class="text-end">@subtotal.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td class="text-center">Totales:</td>
                        <td></td>
                        <td></td>
                        <td class="text-center">@totalPedida</td>
                        <td></td>
                        <td></td>
                        <td class="text-center">@totalRecibida</td>
                        <td class="text-end">@totalMonto.ToString("N2")</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <!-- ========================= ACCIONES FINALES ========================= -->
    <div class="ua-actions" style="margin-top:12px;">

        <div class="d-flex align-items-center gap-2">
            <!-- Volver -->
            <a asp-action="Index" asp-controller="Compras" class="btn-cancel">
                <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor" aria-hidden="true">
                    <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" />
                </svg>
                <span>Volver</span>
            </a>
        </div>

        @* Recibir (solo si procede) *@
        @if (Model.PuedeEditarPrecio || Model.PuedeMarcarRecibida)
        {
            <a asp-action="Recibir" asp-controller="Compras" asp-route-id="@Model.CompraId" class="btn-recibir">
                <i class="bi bi-truck"></i> <span>Recibir productos</span>
            </a>
        }

        @* Cargar a inventario (según bandera de tu VM) *@
        @if (Model.PuedeCargarInventario)
        {
            <form asp-action="CargarInventario" asp-controller="Compras" asp-route-id="@Model.CompraId"
                  method="post"
                  onsubmit="return confirm('Esta acción actualizará inventario y cerrará la compra. ¿Continuar?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn-cargar">
                    <i class="bi bi-box-arrow-in-down"></i> <span>Cargar a Inventario</span>
                </button>
            </form>
        }

    </div>
</div>

@functions {
    // Mapeo de código de estado → clase CSS (igual al que ya usas)
    private string GetEstadoClass(string estado) => estado switch
    {
        "BOR" => "secondary",
        "REV" => "revi",
        "APR" => "apro",
        "ENV" => "envi",
        "CON" => "confi",
        "REC" => "reci",
        "CER" => "cerra",
        "ANU" => "anu",
        _ => "light text-dark"
    };
}
