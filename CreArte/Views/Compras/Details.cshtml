        // script para modal de pago de compra
                (function(){
          function qs(s,r=document){return r.querySelector(s);}
          function money(n){return 'Q ' + Number(n||0).toFixed(2);}

          // ===== Orden de Compra: abrir modal si viene la bandera desde Send =====
          const ocFlag = '@(TempData["SwalOC_Flag"] ?? "")';
          const ocUrl  = '@(TempData["SwalOC_Url"] ?? "")';

            const pcFlag = '@(TempData["SwalPC_Flag"] ?? "")';
            const pcMonto= '@(TempData["SwalPC_Monto"] ?? "")';
        if (ocFlag === 'oc_ready' && ocUrl) {
          const el = document.getElementById('ocModal');
          const a  = document.getElementById('ocBtnDescargar');
          if (a) a.href = ocUrl;
          new bootstrap.Modal(el, { backdrop: 'static', keyboard: false }).show();
        }

        // / ===== Pago de Compra: abrir cuando vuelva de Recibir =====
        if (pcFlag === 'pc_ready') {
          const el = document.getElementById('pcModal');
          const monto = document.getElementById('pcMonto');
          if (monto) monto.value = Number(pcMonto || 0).toFixed(2);

          // Preseleccionar EFECTIVO si existe y refrescar validaciones/vuelto
          (function preselectEf(){
            const sel = document.getElementById('pcMetodo');
            if (!sel) return;
            const opts = Array.from(sel.options || []);
            const idx = opts.findIndex(o => ((o.getAttribute('data-nombre') || o.text || '').toUpperCase()).includes('EFECTIVO'));
            if (idx >= 0) sel.selectedIndex = idx;
          })();

          // Llama tus helpers existentes (del mismo bloque)
          // toggleEf, recalcVuelto, validatePago deben estar definidos arriba
          if (typeof toggleEf === 'function') toggleEf();
          if (typeof recalcVuelto === 'function') recalcVuelto();
          if (typeof validatePago === 'function') validatePago();

          new bootstrap.Modal(el, { backdrop: 'static', keyboard: false }).show();
        }

          // ===== Pago Compra: helpers (EFECTIVO vs otros)
          function isEf(){
            const opt = qs('#pcMetodo')?.selectedOptions?.[0];
            const nombre = (opt?.getAttribute('data-nombre') || opt?.text || '').toUpperCase();
            return nombre.includes('EFECTIVO');
          }
          function toggleEf(){
            const block = qs('#pcEfectivoBlock');
            const inp   = qs('#pcEfectivo');
            const esEf  = isEf();
            block.style.opacity = esEf ? '1' : '.6';
            inp.disabled = !esEf;
            if (!esEf){ inp.value=''; qs('#pcVuelto').textContent = money(0); qs('#pcEfectivoErr').classList.add('d-none'); }
          }
          function recalcVuelto(){
            const total = Number(qs('#pcMonto')?.value || 0);
            const rec   = Number(qs('#pcEfectivo')?.value || 0);
            qs('#pcVuelto').textContent = money(Math.max(0, rec - total));
          }
          function validatePago(){
            let ok = true;
            const metodo = (qs('#pcMetodo')?.value || '').trim();
            const monto  = Number(qs('#pcMonto')?.value || 0);

            if (!metodo){ qs('#pcMetodoErr').classList.remove('d-none'); ok=false; } else qs('#pcMetodoErr').classList.add('d-none');
            if (!(monto>0)){ qs('#pcMontoErr').classList.remove('d-none'); ok=false; } else qs('#pcMontoErr').classList.add('d-none');

            if (isEf()){
              const rec = Number(qs('#pcEfectivo')?.value || 0);
              const err = qs('#pcEfectivoErr');
              if (!(rec>0)){ err.textContent = 'Ingrese efectivo entregado.'; err.classList.remove('d-none'); ok=false; }
              else if (rec < monto){ err.textContent='El efectivo no puede ser menor al monto.'; err.classList.remove('d-none'); ok=false; }
              else { err.classList.add('d-none'); }
            } else {
              qs('#pcEfectivoErr').classList.add('d-none');
            }
            qs('#pcBtnConfirmar').disabled = !ok;
            return ok;
          }

          // Wire-up
          document.getElementById('pcMetodo')?.addEventListener('change', ()=>{toggleEf(); validatePago();});
          document.getElementById('pcEfectivo')?.addEventListener('input', ()=>{recalcVuelto(); validatePago();});
          document.getElementById('pcMonto')?.addEventListener('input', ()=>{recalcVuelto(); validatePago();});
          document.getElementById('pcForm')?.addEventListener('submit', function(e){
            if (!validatePago()) { e.preventDefault(); }
          });
        })();
    </script>
